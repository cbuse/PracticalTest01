<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="practicaltest01.pdsd.systems.cs.pub.ro.practicaltest01.PracticalTest01MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Navigate to secondary activity"
        android:id="@+id/navigate_to_secondary_activity"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Space
        android:id="@+id/space"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:layout_below="@+id/navigate_to_secondary_activity"
        android:layout_centerHorizontal="true"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:width="170dp"
        android:id="@+id/left_text"
        android:layout_below="@+id/navigate_to_secondary_activity"
        android:layout_alignLeft="@+id/space"
        android:layout_alignParentLeft="true"


        android:gravity="center"
        />
        <!-- android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:width="170dp"-->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/right_text"
        android:layout_below="@+id/navigate_to_secondary_activity"
        android:layout_alignRight="@+id/navigate_to_secondary_activity"
        android:layout_alignEnd="@+id/navigate_to_secondary_activity"
        android:width="170dp"
        android:gravity="center"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Left Button"
        android:id="@+id/left_button"
        android:layout_below="@+id/left_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Right Button"
        android:id="@+id/right_button"
        android:layout_alignBottom="@+id/left_button"
        android:layout_alignLeft="@+id/right_text"
        android:layout_alignStart="@+id/right_text"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:weightSum="4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/left_button"
        android:id="@+id/linearLayout">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="buton1"
            android:id="@+id/button_1"
            android:layout_weight="1"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="buton2"
            android:id="@+id/buton2"
            android:layout_weight="1"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="buton3"
            android:id="@+id/buton3"
            android:layout_weight="1"

            />

    </LinearLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text_left"
        android:layout_below="@+id/linearLayout"

        android:text="Stanga" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text_right"
        android:layout_toRightOf="@+id/left_text"
        android:layout_below="@+id/linearLayout"
        android:text="Dreapta" />


</RelativeLayout>
